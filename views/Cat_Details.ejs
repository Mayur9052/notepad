<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="/public/css/style.css">
    <style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    /* background-color: rgb(138, 222, 255); */
    background-image: url("../image/k2.jpg");
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
    margin: 10px 40px;
}

h1 {
    color: white;
    font-size: 40px;
    font-weight: 600;
}

.contents_details {
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
}

.contents {
    background-color: white;
    margin: 20px;
    width: 22%;
    height: 35vh;
    overflow: hidden;
    padding: 0px 20px;
    border-radius: 10px;
}

.edit_btn {
    /* background-color: rgb(25, 150, 61); */
    color: white;
    padding: 7px 11px;
    /* padding: 10px; */
    font-weight: 300;
    border-radius: 5px;
    float: right;
    margin: 5px 10px;
}


.delete_btn {
    /* background-color: rgb(255, 0, 0); */
    color: white;
    padding: 7px 11px;
    font-weight: 300;
    border-radius: 5px;
    float: right;
    margin: 6px 0;
    border: none;
}

.check_btn {
    /* background-color: rgb(0, 187, 255); */
    color: white;
    padding: 5px 5px;
    font-weight: 300;
    border-radius: 5px;
    float: right;
    margin: 6px 0;
    border: none;
}

.side_content input {
    width: 20%;
}

.side_content {
    display: flex;
    flex-direction: row-reverse;
    margin-top: -3%;
}

.side_content a {
    margin-right: 15px;    
}


.side_content button {
    margin-right: 15px;    
}

.cat_mainbar {
    text-align: center;
    margin-top: 10px;
}

.cat_mainbar a {
    margin: 10px;
}
    </style>
</head>

<body>
    <div class="main_details">
        <h1>Notes</h1>
        <div class="side_content">
            <input type="text" name="search_note" id="search_note" class="form-control search_note"
                placeholder="Search Here...">
            <button type="button" class="btn btn-primary cat_class_note_one" data-toggle="modal"
                data-target="#cat_note"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                    fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                    <path
                        d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                </svg> Category</button>
            <a href="/Home" class="cat_class_note_two btn btn-success"><svg xmlns="http://www.w3.org/2000/svg"
                    width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                    <path
                        d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                </svg> Note</a>
                <a href="/checked" class="btn btn-danger">
                    Completed Tasks
                </a>
        </div>
        <div class="cat_mainbar">
            <a href="/Details" class="btn btn-warning text-black">All</a>
            <% cat_demo_details.forEach(cat=> { %>
                <a href="/Cat_Details/<%= cat.cat_name%>" class="btn btn-warning text-black">
                    <%= cat.cat_name%>
                </a>
                <% })%>
        </div>

        <div class="contents_details">
            <% demo_cat.forEach(notes=> { %>

                <div type="button" class="contents" data-toggle="modal"
                data-target="#single_note<%= notes.id %>">
                    <form action="/Details/<%= notes.id %>" method="post">
                        <button type="submit" class="delete_btn btn btn-danger"><span
                                class="glyphicon glyphicon-trash"></span></button>
                    </form>

                    <a href="/Edit_Details/<%= notes.id %>"><span class="glyphicon glyphicon-edit edit_btn btn btn-success"></span></a>
                    <form action="/Details/<%= notes.id %>" method="post">
                        <button class="btn btn-primary check_btn btn btn-primary"><svg xmlns="http://www.w3.org/2000/svg" width="25"
                                height="25" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                                <path
                                    d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z" />
                            </svg></button>
                    </form>
                    <!-- <button type="button" class="btn btn-primary cat_class_note_one" data-toggle="modal"
                        data-target="#single_note<%= notes.id %>">readmore</button> -->
                    <h3>
                        <%= notes.name %>
                    </h3>
                    <h6>
                        <%= notes.Date %>
                    </h6>
                    <p>
                        <%= notes.description %>
                    </p>
                    <!-- </button> -->
                </div>
                <% })%>
        </div>
    </div>

    <!-- category modal  -->

    <div class="modal fade" id="cat_note" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <form action="/Details" method="post">
                        <input type="text" name="add_cat" class="form-control" id="add_cat"
                            placeholder="Category Here..." required>
                        <br>
                        <input type="submit" name="submit" class="btn btn-primary add_cat_note" value="Add">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- single notes modals -->
    <% demo_cat.forEach(notes=> { %>

    <div class="modal fade" id="single_note<%= notes.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body single_data_modal">
                    <h2><%= notes.name %></h2>
                    <p><%= notes.description %></p>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <% })%>

    <script>
        document.querySelector("#search_note").addEventListener("input", searchNote);

        function searchNote() {
            const search_note = document.querySelector("#search_note");
            const filter = search_note.value.toLowerCase();
            const contents = document.querySelectorAll(".contents");

            contents.forEach((note) => {
                let result = note.textContent;
                if (result.toLowerCase().includes(filter.toLowerCase())) {
                    note.style.display = "";
                } else {
                    note.style.display = "none";
                }
            })
        }
    </script>
</body>

</html>