<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">

    <!-- <link rel="stylesheet" href="css/style.css"> -->
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        button:focus {
            outline: none;
        }

        body {
            /* background-color: rgb(138, 222, 255); */
            background-image: url("../image/k2.jpg");
            background-size: 100% 100vh;
            background-repeat: no-repeat;
            /* background-position: top; */
            /* display: flex;
    flex-direction: row; */
        }

        h1 {
            margin: 20px;
            margin-left: 0;
            color: white;
            text-align: center;
            position: relative;
            left: -3%;
        }

        .flex_content {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
        }

        #cat_events {
            position: relative;
            left: -8%;
        }

        .header {
            color: red;
        }

        .first_main {
            margin: 0;
            margin-left: 5%;
            flex-basis: 50%;
        }

        .second_main {
            margin: 2%;
            flex-basis: 45%;
        }

        .name {
            margin: 15px 0px;
            margin-bottom: 20px;
            width: 79%;
            margin: 1% 6.3%;
            font-size: 15px;
            border: none;
            outline: none;
            border-radius: 10px;
            padding: 12px;
        }

        .description {
            width: 75%;
            height: 60vh;
            font-size: 15px;
            border: none;
            margin: 1% 6%;
            position: relative;
            left: 5%;
            /* margin-top: 0; */
            outline: none;
            border-radius: 10px;
            padding: 12px;
            background-color: rgb(255, 255, 255);
        }

        .second_content {
            background-color: white;
            padding: 7px 15px;
            margin: 10px 0px;
            border-radius: 7px;
        }

        .second_content p {
            float: right;
            position: relative;
            top: -30px;
            font-size: small;
        }

        #submit {
            background-color: green;
            padding: 8px 24px;
            position: absolute;
            left: 46%;
            bottom: 35px;
            border-radius: 0;
            border: 1px solid green;
            transition-duration: 0.4s;
            outline: none;
        }

        #submit:hover {
            background-color: white;
            color: green;
        }

        .demo_note {
            float: right;
            position: absolute;
            top: 4%;
            right: 5%;
        }
    </style>
</head>

<body>
    <div class="first_main">
        <h1>Notepad</h1>
        <a href="/Details" class="btn btn-primary demo_note">Notes</a>
            <% edit_details_note.forEach(note => {%>

        <form action="/Edit_Details/<%= note.id %>" method="post" class="form-group">
            <div class="flex_content">
                <input type="text" name="name" id="cat" value="<%= note.name %>" class="name" placeholder="Title Here...">                
            </div>
    </div>
    <textarea name="description" id="" class="description" placeholder="Notes Here..." required><%= note.description %></textarea>
    <br>
    <input type="submit" name="submit" value="ADD" id="submit" class="btn btn-primary">

    </form>
    <% })%>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
</body>

</html>

